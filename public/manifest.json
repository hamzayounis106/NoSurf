{
  "manifest_version": 3,
  "name": "NoSurf Website Blocker",
  "description": "Block distracting websites and track your saved time.",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icons/icon128.png"
  }
}
